{
  "manifest_version": 3,
  "name": "YTshortsToWatch",
  "version": "1.0.0",
  "description": "Plugin to change shorts url to normal video",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },

  "permissions": ["scripting", "activeTab"],

  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
